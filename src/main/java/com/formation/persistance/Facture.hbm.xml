<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.formation.persistance.Facture" table="facture" catalog="app">
		<!-- Définition de la clé primaire de la table facture-->
		<id name="idFacture" type="java.lang.Integer">
			<column name="idFacture" />
			<generator class="increment" />
		</id>
	<!-- Définition des propriétés de la table facture-->
		<property name="montant" type="java.lang.Integer">
			<column name="montant"  />
		</property>

	
</class>
</hibernate-mapping>